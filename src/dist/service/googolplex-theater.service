[Unit]
Description=googolplex-theater
After=network.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
User=root
Restart=on-failure
RestartSec=1
StartLimitInterval=60
StartLimitBurst=5
ExecStart=/usr/bin/java -jar /path/to/you/googolplex-theater-all.jar --cast-config /path/to/your/config.json
